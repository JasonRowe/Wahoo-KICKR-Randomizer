<Window x:Class="BikeFitnessApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:viewmodels="clr-namespace:BikeFitnessApp.ViewModels"
        xmlns:local="clr-namespace:BikeFitnessApp"
        Title="Cycle Training Controller" Height="700" Width="1200" MinHeight="600" MinWidth="800"
        Icon="AppIcon.ico"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <DataTemplate DataType="{x:Type viewmodels:SetupViewModel}">
            <local:SetupView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:WorkoutViewModel}">
            <local:WorkoutView />
        </DataTemplate>
    </Window.Resources>
    <Grid x:Name="MainContainer">
        <ContentControl Content="{Binding CurrentView}" />
    </Grid>
</Window>