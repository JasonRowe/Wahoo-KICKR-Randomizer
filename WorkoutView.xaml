<UserControl x:Class="BikeFitnessApp.WorkoutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1200"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             TextElement.FontWeight="Regular"
             TextElement.FontSize="14"
             TextOptions.TextFormattingMode="Ideal"
             TextOptions.TextRenderingMode="Auto"
             Background="{DynamicResource MaterialDesignPaper}"
             FontFamily="{materialDesign:MaterialDesignFont}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top Bar -->
        <materialDesign:ColorZone Mode="PrimaryMid" Padding="16" materialDesign:ElevationAssist.Elevation="Dp4">
            <Grid>
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="BikeFast" Width="32" Height="32" VerticalAlignment="Center" Margin="0,0,12,0"/>
                    <TextBlock Text="TRAINING SESSION" Style="{DynamicResource MaterialDesignHeadline5TextBlock}" VerticalAlignment="Center" FontWeight="Bold"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <Menu Background="Transparent" TextElement.Foreground="{DynamicResource PrimaryHueMidForegroundBrush}" Margin="0,0,16,0">
                        <MenuItem Header="SETTINGS" Height="32">
                            <MenuItem x:Name="MenuEnableLogging" Header="Enable Logging" IsCheckable="True" IsChecked="{Binding IsLoggingEnabled}" Foreground="Black"/>
                        </MenuItem>
                    </Menu>
                    <materialDesign:Chip x:Name="TxtStatus" Content="{Binding Status}" 
                          Background="#4CAF50" Foreground="White" IconBackground="#388E3C">
                        <materialDesign:Chip.Icon>
                            <materialDesign:PackIcon Kind="BluetoothConnected" />
                        </materialDesign:Chip.Icon>
                    </materialDesign:Chip>
                </StackPanel>
            </Grid>
        </materialDesign:ColorZone>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- Controls Side -->
            <StackPanel Grid.Column="0" Margin="0,0,12,0">
                <materialDesign:Card Padding="24" materialDesign:ElevationAssist.Elevation="Dp2" UniformCornerRadius="16">
                    <StackPanel>
                        <TextBlock Text="INTENSITY RANGE" Style="{DynamicResource MaterialDesignHeadline6TextBlock}" Margin="0,0,0,24" HorizontalAlignment="Center" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                        
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="MIN RESISTANCE" Style="{DynamicResource MaterialDesignOverlineTextBlock}"/>
                            <TextBlock Text="{Binding MinResistance, StringFormat={}({0}%)}" 
                                       Style="{DynamicResource MaterialDesignOverlineTextBlock}" Margin="8,0,0,0" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                        </StackPanel>
                        <Slider x:Name="SliderMin" Minimum="0" Maximum="100" Value="{Binding MinResistance}" TickFrequency="5" IsSnapToTickEnabled="True"
                                Style="{DynamicResource MaterialDesignSlider}" Margin="0,0,0,24"/>
                        
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="MAX RESISTANCE" Style="{DynamicResource MaterialDesignOverlineTextBlock}"/>
                            <TextBlock Text="{Binding MaxResistance, StringFormat={}({0}%)}" 
                                       Style="{DynamicResource MaterialDesignOverlineTextBlock}" Margin="8,0,0,0" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                        </StackPanel>
                        <Slider x:Name="SliderMax" Minimum="0" Maximum="100" Value="{Binding MaxResistance}" TickFrequency="5" IsSnapToTickEnabled="True"
                                Style="{DynamicResource MaterialDesignSlider}" Margin="0,0,0,24"/>

                        <StackPanel Margin="0,0,0,24">
                            <TextBlock Text="WORKOUT MODE" Style="{DynamicResource MaterialDesignOverlineTextBlock}"/>
                            <ComboBox x:Name="ComboWorkoutMode" SelectedIndex="{Binding SelectedModeIndex}" Style="{DynamicResource MaterialDesignOutlinedComboBox}" Margin="0,8,0,0">
                                <ComboBoxItem Content="Random ðŸŽ²"/>
                                <ComboBoxItem Content="Hilly â›°ï¸"/>
                                <ComboBoxItem Content="Mountain Climb ðŸ”ï¸"/>
                            </ComboBox>
                        </StackPanel>

                        <materialDesign:ColorZone Mode="Light" Padding="12" CornerRadius="8" materialDesign:ElevationAssist.Elevation="Dp0">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Style="{DynamicResource MaterialDesignToolButton}" Command="{Binding DecreaseIntervalCommand}" Margin="0,0,8,0">
                                    <materialDesign:PackIcon Kind="ChevronDown" />
                                </Button>
                                
                                <materialDesign:PackIcon Kind="Timer" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock x:Name="TxtInterval" Text="{Binding IntervalText}" VerticalAlignment="Center" FontWeight="SemiBold" Width="80" TextAlignment="Center"/>
                                
                                <Button Style="{DynamicResource MaterialDesignToolButton}" Command="{Binding IncreaseIntervalCommand}" Margin="8,0,0,0">
                                    <materialDesign:PackIcon Kind="ChevronUp" />
                                </Button>
                            </StackPanel>
                        </materialDesign:ColorZone>
                    </StackPanel>
                </materialDesign:Card>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,24,0,0">
                    <Button x:Name="BtnStart" Content="START" Command="{Binding StartCommand}" 
                            Style="{DynamicResource MaterialDesignRaisedButton}" 
                            Background="#4CAF50" BorderBrush="#4CAF50"
                            Width="140" Height="50" materialDesign:ButtonAssist.CornerRadius="25" Margin="0,0,16,0">
                    </Button>
                    <Button x:Name="BtnStop" Content="STOP" Command="{Binding StopCommand}" 
                            Style="{DynamicResource MaterialDesignRaisedButton}" 
                            Background="#F44336" BorderBrush="#F44336"
                            Width="140" Height="50" materialDesign:ButtonAssist.CornerRadius="25">
                    </Button>
                </StackPanel>
            </StackPanel>

            <!-- Display Side -->
            <materialDesign:Card Grid.Column="1" Margin="12,0,0,0" UniformCornerRadius="16" Background="#1A1A1A">
                <Grid>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="CURRENT RESISTANCE" HorizontalAlignment="Center" Foreground="#AAAAAA" FontWeight="Bold" Margin="0,0,0,8"/>
                        <Viewbox Height="200">
                            <TextBlock x:Name="TxtCurrentResistance" Text="{Binding ResistancePercent, StringFormat={}{0:F0}%}" 
                                       FontWeight="Black" Foreground="{Binding ResistanceBrush}" />
                        </Viewbox>
                        
                        <!-- Visual Gauge -->
                        <Grid Margin="48,24,48,0">
                             <ProgressBar x:Name="ResistanceGauge" Height="20" Minimum="0" Maximum="100" Value="{Binding ResistancePercent}" 
                                         Foreground="{Binding ResistanceBrush}"
                                         Background="#333333" BorderThickness="0"/>
                        </Grid>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,40,0,0">
                            <!-- Power -->
                            <StackPanel MinWidth="120">
                                <TextBlock Text="POWER" HorizontalAlignment="Center" Foreground="#AAAAAA" FontWeight="Bold"/>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                     <TextBlock x:Name="TxtPower" Text="{Binding Power}" FontSize="48" FontWeight="Bold" Foreground="White"/>
                                     <TextBlock Text="w" FontSize="24" Foreground="#888888" VerticalAlignment="Bottom" Margin="4,0,0,8"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </materialDesign:Card>
        </Grid>

        <!-- Bottom Status -->
        <StatusBar Grid.Row="2" Background="Transparent">
            <StatusBarItem>
                <TextBlock x:Name="TxtLog" Text="{Binding Log}" Style="{DynamicResource MaterialDesignCaptionTextBlock}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</UserControl>