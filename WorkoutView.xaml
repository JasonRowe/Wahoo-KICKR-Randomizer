<UserControl x:Class="BikeFitnessApp.WorkoutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:converters="clr-namespace:BikeFitnessApp.Converters"
             xmlns:shared="clr-namespace:BikeFitness.Shared;assembly=BikeFitness.Shared"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1200"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             TextElement.FontWeight="Regular"
             TextElement.FontSize="14"
             TextOptions.TextFormattingMode="Ideal"
             TextOptions.TextRenderingMode="Auto"
             Background="{DynamicResource MaterialDesignPaper}"
             FontFamily="{materialDesign:MaterialDesignFont}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top Bar -->
        <materialDesign:ColorZone Mode="PrimaryMid" Padding="12" materialDesign:ElevationAssist.Elevation="Dp4">
            <Grid>
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="BikeFast" Width="28" Height="28" VerticalAlignment="Center" Margin="0,0,12,0"/>
                    <TextBlock Text="TRAINING SESSION" Style="{DynamicResource MaterialDesignHeadline6TextBlock}" VerticalAlignment="Center" FontWeight="Bold"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <Menu Background="Transparent" TextElement.Foreground="{DynamicResource PrimaryHueMidForegroundBrush}" Margin="0,0,16,0">
                        <MenuItem Header="SETTINGS" Height="32">
                            <MenuItem x:Name="MenuEnableLogging" Header="Enable Logging" IsCheckable="True" IsChecked="{Binding IsLoggingEnabled}" Foreground="Black"/>
                            <Separator/>
                            <MenuItem Header="Units" Foreground="Black">
                                <MenuItem Header="Metric (KPH)" IsCheckable="True" IsChecked="{Binding IsMetric}" Foreground="Black"/>
                            </MenuItem>
                            <MenuItem Header="Tire Size" Foreground="Black" ItemsSource="{Binding TireSizes}">
                                <MenuItem.ItemContainerStyle>
                                    <Style TargetType="MenuItem" BasedOn="{StaticResource MaterialDesignMenuItem}">
                                        <Setter Property="Header" Value="{Binding Name}"/>
                                        <Setter Property="IsCheckable" Value="True"/>
                                        <Setter Property="IsChecked">
                                            <Setter.Value>
                                                <MultiBinding Converter="{x:Static converters:EqualityConverter.Instance}">
                                                    <Binding Path="DataContext.SelectedTireSize" RelativeSource="{RelativeSource AncestorType=MenuItem, AncestorLevel=2}"/>
                                                    <Binding Path="."/>
                                                </MultiBinding>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter Property="Command" Value="{Binding DataContext.SelectTireSizeCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                                        <Setter Property="CommandParameter" Value="{Binding .}"/>
                                    </Style>
                                </MenuItem.ItemContainerStyle>
                            </MenuItem>
                        </MenuItem>
                    </Menu>
                    <materialDesign:Chip x:Name="TxtStatus" Content="{Binding Status}" 
                          Background="#4CAF50" Foreground="White" IconBackground="#388E3C">
                        <materialDesign:Chip.Icon>
                            <materialDesign:PackIcon Kind="BluetoothConnected" />
                        </materialDesign:Chip.Icon>
                    </materialDesign:Chip>
                </StackPanel>
            </Grid>
        </materialDesign:ColorZone>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Controls Side -->
            <StackPanel Grid.Column="0" Margin="0,0,8,0">
                <materialDesign:Card Padding="16" materialDesign:ElevationAssist.Elevation="Dp2" UniformCornerRadius="16">
                    <StackPanel>
                        <TextBlock Text="INTENSITY RANGE" Style="{DynamicResource MaterialDesignHeadline6TextBlock}" Margin="0,0,0,16" HorizontalAlignment="Center" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                        
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding MinLabel}" Style="{DynamicResource MaterialDesignOverlineTextBlock}"/>
                            <TextBlock Text="{Binding MinResistance, StringFormat={}({0}%)}" 
                                       Style="{DynamicResource MaterialDesignOverlineTextBlock}" Margin="8,0,0,0" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                        </StackPanel>
                        <Slider x:Name="SliderMin" Minimum="-10" Maximum="20" Value="{Binding MinResistance}" TickFrequency="0.5" IsSnapToTickEnabled="True"
                                Style="{DynamicResource MaterialDesignSlider}" Margin="0,0,0,16"/>
                        
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding MaxLabel}" Style="{DynamicResource MaterialDesignOverlineTextBlock}"/>
                            <TextBlock Text="{Binding MaxResistance, StringFormat={}({0}%)}" 
                                       Style="{DynamicResource MaterialDesignOverlineTextBlock}" Margin="8,0,0,0" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                        </StackPanel>
                        <Slider x:Name="SliderMax" Minimum="-10" Maximum="20" Value="{Binding MaxResistance}" TickFrequency="0.5" IsSnapToTickEnabled="True"
                                Style="{DynamicResource MaterialDesignSlider}" Margin="0,0,0,16"/>

                        <StackPanel Margin="0,0,0,16">
                            <TextBlock Text="WORKOUT MODE" Style="{DynamicResource MaterialDesignOverlineTextBlock}"/>
                            <ComboBox x:Name="ComboWorkoutMode" SelectedIndex="{Binding SelectedModeIndex}" Style="{DynamicResource MaterialDesignOutlinedComboBox}" Margin="0,8,0,0">
                                <ComboBoxItem Content="Random ðŸŽ²"/>
                                <ComboBoxItem Content="Hilly â›°ï¸"/>
                                <ComboBoxItem Content="Mountain Climb ðŸ”ï¸"/>
                            </ComboBox>
                        </StackPanel>

                        <materialDesign:ColorZone Mode="Light" Padding="8" CornerRadius="8" materialDesign:ElevationAssist.Elevation="Dp0">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Style="{DynamicResource MaterialDesignToolButton}" Command="{Binding DecreaseIntervalCommand}" Margin="0,0,4,0">
                                    <materialDesign:PackIcon Kind="ChevronDown" />
                                </Button>
                                
                                <materialDesign:PackIcon Kind="Timer" Margin="0,0,4,0" VerticalAlignment="Center"/>
                                <TextBlock x:Name="TxtInterval" Text="{Binding IntervalText}" VerticalAlignment="Center" FontWeight="SemiBold" Width="70" TextAlignment="Center"/>
                                
                                <Button Style="{DynamicResource MaterialDesignToolButton}" Command="{Binding IncreaseIntervalCommand}" Margin="4,0,0,0">
                                    <materialDesign:PackIcon Kind="ChevronUp" />
                                </Button>
                            </StackPanel>
                        </materialDesign:ColorZone>
                    </StackPanel>
                </materialDesign:Card>

                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0,16,0,0">
                    <Button x:Name="BtnStart" Content="START SESSION" Command="{Binding StartCommand}" 
                            Style="{DynamicResource MaterialDesignRaisedButton}" 
                            Background="#4CAF50" BorderBrush="#4CAF50"
                            Width="200" Height="45" materialDesign:ButtonAssist.CornerRadius="22" Margin="0,0,0,12">
                    </Button>
                    <Button x:Name="BtnStop" Content="STOP SESSION" Command="{Binding StopCommand}" 
                            Style="{DynamicResource MaterialDesignRaisedButton}" 
                            Background="#F44336" BorderBrush="#F44336"
                            Width="200" Height="45" materialDesign:ButtonAssist.CornerRadius="22">
                    </Button>
                </StackPanel>
            </StackPanel>

            <!-- Display Side -->
            <materialDesign:Card Grid.Column="1" Margin="4,0,0,0" UniformCornerRadius="16" Background="#1A1A1A">
                <Grid>
                    <!-- Game Canvas -->
                    <shared:SimulationCanvas SpeedKph="{Binding CurrentSpeedKph}" 
                                           GradePercent="{Binding CurrentGradePercent}" 
                                           SyncedDistanceMeters="{Binding CurrentDistanceMeters}"
                                           Opacity="1.0"/>

                    <!-- HUD: Top Left Grade Badge -->
                    <materialDesign:Card VerticalAlignment="Top" HorizontalAlignment="Left" Margin="24" 
                                       Background="#E6212121" UniformCornerRadius="12" Padding="16"
                                       materialDesign:ElevationAssist.Elevation="Dp6">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="SlopeUphill" Width="32" Height="32" Foreground="Silver" VerticalAlignment="Center" Margin="0,0,12,0"/>
                            <StackPanel>
                                <TextBlock Text="GRADE" Style="{StaticResource MaterialDesignOverlineTextBlock}" Foreground="Silver" FontWeight="Bold"/>
                                <TextBlock Text="{Binding ResistancePercent, StringFormat={}{0:F1}%}" FontSize="48" FontWeight="Black" Foreground="{Binding ResistanceBrush}"/>
                            </StackPanel>
                        </StackPanel>
                    </materialDesign:Card>

                    <!-- HUD: Bottom Telemetry Bar -->
                    <Grid VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Margin="16,0,16,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        
                        <!-- Power Panel -->
                        <materialDesign:Card Grid.Column="0" Margin="8" Background="#E6212121" UniformCornerRadius="16" Padding="12" materialDesign:ElevationAssist.Elevation="Dp4">
                            <StackPanel>
                                <TextBlock Text="POWER (WATTS)" Style="{StaticResource MaterialDesignOverlineTextBlock}" Foreground="Silver" HorizontalAlignment="Center" FontWeight="Bold"/>
                                <TextBlock Text="{Binding PowerText}" FontSize="72" FontWeight="Black" Foreground="#2196F3" HorizontalAlignment="Center">
                                    <TextBlock.Effect>
                                        <DropShadowEffect BlurRadius="10" Color="#2196F3" Opacity="0.3" ShadowDepth="0"/>
                                    </TextBlock.Effect>
                                </TextBlock>
                            </StackPanel>
                        </materialDesign:Card>

                        <!-- Speed Panel -->
                        <materialDesign:Card Grid.Column="1" Margin="8" Background="#E6212121" UniformCornerRadius="16" Padding="12" materialDesign:ElevationAssist.Elevation="Dp4">
                            <StackPanel>
                                <TextBlock Text="{Binding SpeedLabel}" Style="{StaticResource MaterialDesignOverlineTextBlock}" Foreground="Silver" HorizontalAlignment="Center" FontWeight="Bold"/>
                                <TextBlock Text="{Binding SpeedText}" FontSize="72" FontWeight="Black" Foreground="#4CAF50" HorizontalAlignment="Center">
                                    <TextBlock.Effect>
                                        <DropShadowEffect BlurRadius="10" Color="#4CAF50" Opacity="0.3" ShadowDepth="0"/>
                                    </TextBlock.Effect>
                                </TextBlock>
                            </StackPanel>
                        </materialDesign:Card>

                        <!-- Distance Panel -->
                        <materialDesign:Card Grid.Column="2" Margin="8" Background="#E6212121" UniformCornerRadius="16" Padding="12" materialDesign:ElevationAssist.Elevation="Dp4">
                            <StackPanel>
                                <TextBlock Text="{Binding DistanceLabel}" Style="{StaticResource MaterialDesignOverlineTextBlock}" Foreground="Silver" HorizontalAlignment="Center" FontWeight="Bold"/>
                                <TextBlock Text="{Binding DistanceText}" FontSize="72" FontWeight="Black" Foreground="White" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </materialDesign:Card>
                    </Grid>
                </Grid>
            </materialDesign:Card>
        </Grid>

        <!-- Bottom Status -->
        <StatusBar Grid.Row="2" Background="Transparent" Margin="8,0">
            <StatusBarItem>
                <TextBlock x:Name="TxtLog" Text="{Binding Log}" 
                           Style="{DynamicResource MaterialDesignCaptionTextBlock}" 
                           Foreground="Gray" Opacity="0.5" FontSize="10"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</UserControl>